@model CarRental.Models.Car

@{
    ViewData["Title"] = "Create";
}

<main class="main__content_wrapper">
    <div class="dashboard__container add__property--container">
        <div class="add__property--heading mb-30 text-center">
            <h2 class="add__property--heading__title">Add New Car</h2>
        </div>
        <div class="add__property__inner d-flex justify-content-center">
            <div class="add__property--box mb-30 w-50">
                <h3 class="add__property--box__title mb-20">Car Details</h3>
                <form class="add__property--form" action="/Dashboard/Cars/Create" enctype="multipart/form-data" method="post">
                    <div class="row">
                        <div class="col-12">
                            <div class="add__listing--input__box mb-20">
                                <label class="add__listing--input__label" for="CarID">Car ID</label>
                                <input class="add__listing--input__field" id="CarID" name="CarID" type="text">
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="add__listing--input__box mb-20">
                                <label class="add__listing--input__label" for="Brand">Brand</label>
                                <input class="add__listing--input__field" id="Brand" name="Brand" type="text">
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="add__listing--input__box mb-20">
                                <label class="add__listing--input__label" for="Model">Model</label>
                                <input class="add__listing--input__field" id="Model" name="Model" type="text">
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="add__listing--input__box mb-20">
                                <label class="add__listing--input__label" for="Year">Year</label>
                                <input class="add__listing--input__field" id="Year" name="Year" type="number" min="1900" max="2025">
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="add__listing--input__box mb-20">
                                <label class="add__listing--input__label" for="Seats">Seats</label>
                                <input class="add__listing--input__field" id="Seats" name="Seats" type="number" min="1" max="10">
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="add__listing--input__box mb-20">
                                <label class="add__listing--input__label" for="FuelType">Fuel Type</label>
                                <select class="add__listing--form__select" id="FuelType" name="FuelType" asp-items="@ViewBag.FuelTypeList"></select>
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="add__listing--input__box mb-20">
                                <label class="add__listing--input__label" for="Transmission">Transmission</label>
                                <select class="add__listing--form__select" id="Transmission" name="Transmission" asp-items="@ViewBag.TransmissionList"></select>
                            </div>
                        </div>

                        <div class="col-lg-6">
                            <div class="add__listing--input__box mb-20">
                                <label class="add__listing--input__label" for="DailyRate">Daily Rate</label>
                                <input class="add__listing--input__field" id="DailyRate" name="DailyRate" type="number" step="0.01" min="0">
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="add__listing--input__box mb-20">
                                <label class="add__listing--input__label" for="Status">Status</label>
                                <select class="add__listing--form__select" id="Status" name="Status" asp-items="@ViewBag.StatusList"></select>
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="add__listing--input__box mb-20">
                                <label class="add__listing--input__label">Upload Car Image</label>
                                <label class="btn btn-primary btn-md btn-file" style="cursor: pointer;">
                                    Car Image
                                    <input type="file" id="ImageFile" name="ImageFile" hidden onchange="showFileName(this)">
                                </label>
                                <span id="file-name" class="ml-2 text-muted"></span>
                            </div>
                        </div>

                        <div class="col-12">
                            <div class="add__listing--input__box mb-20">
                                <label class="add__listing--input__label">Company Logo</label>
                                <label class="btn btn-primary btn-md btn-file" style="cursor: pointer;">
                                    Company Logo
                                    <input type="file" id="CompanyLogo" name="CompanyLogo" hidden onchange="showFileName(this)">
                                </label>
                                <span id="file-name" class="ml-2 text-muted"></span>
                            </div>
                        </div>
                    </div>
                    <button class="solid__btn add__property--btn">Create</button>
                </form>
            </div>
        </div>
        <div class="text-center mt-3">
            <a href="/Dashboard/Cars/Index">Back to List</a>
        </div>
    </div>
</main>

<script>
    function showFileName(input) {
        const fileName = input.files[0]?.name || "No file chosen";
        document.getElementById('file-name').innerText = fileName;
    }
</script>
