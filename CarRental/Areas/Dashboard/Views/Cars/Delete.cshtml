@model CarRental.Models.Car

@{
    ViewData["Title"] = "Delete";
}

<main class="main__content_wrapper">
    <div class="dashboard__container add__property--container">
        <div class="add__property--heading mb-30 text-center">
            <h2 class="add__property--heading__title text-danger">Delete Car</h2>
        </div>
        <div class="add__property__inner d-flex justify-content-center">
            <div class="add__property--box mb-30 w-50">
                <h3 class="add__property--box__title mb-20 text-danger">Car Details</h3>

                <!-- Confirmation Message -->
                <div class="alert alert-warning text-center mb-4">
                    <strong>Warning!</strong> Are you sure you want to delete this car? This action cannot be undone.
                </div>

                <form class="add__property--form" action="/Dashboard/Cars/Delete" method="post">
                    <div class="row">
                        <div class="col-12">
                            <div class="add__listing--input__box mb-20">
                                <label class="add__listing--input__label" for="CarID">Car ID</label>
                                <input class="add__listing--input__field" id="CarID" name="CarID" type="text" value="@Model.CarID" readonly />
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="add__listing--input__box mb-20">
                                <label class="add__listing--input__label" for="Brand">Brand</label>
                                <input class="add__listing--input__field" id="Brand" name="Brand" type="text" value="@Model.Brand" readonly />
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="add__listing--input__box mb-20">
                                <label class="add__listing--input__label" for="Model">Model</label>
                                <input class="add__listing--input__field" id="Model" name="Model" type="text" value="@Model.Model" readonly />
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="add__listing--input__box mb-20">
                                <label class="add__listing--input__label" for="Year">Year</label>
                                <input class="add__listing--input__field" id="Year" name="Year" type="number" value="@Model.Year" readonly />
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="add__listing--input__box mb-20">
                                <label class="add__listing--input__label" for="Seats">Seats</label>
                                <input class="add__listing--input__field" id="Seats" name="Seats" type="number" value="@Model.Seats" readonly />
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="add__listing--input__box mb-20">
                                <label class="add__listing--input__label" for="FuelType">Fuel Type</label>
                                <input class="add__listing--input__field" id="FuelType" name="FuelType" type="text" value="@Model.FuelType" readonly />
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="add__listing--input__box mb-20">
                                <label class="add__listing--input__label" for="Transmission">Transmission</label>
                                <input class="add__listing--input__field" id="Transmission" name="Transmission" type="text" value="@Model.Transmission" readonly />
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="add__listing--input__box mb-20">
                                <label class="add__listing--input__label" for="DailyRate">Daily Rate</label>
                                <input class="add__listing--input__field" id="DailyRate" name="DailyRate" type="number" value="@Model.DailyRate" readonly />
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="add__listing--input__box mb-20">
                                <label class="add__listing--input__label" for="Status">Status</label>
                                <input class="add__listing--input__field" id="Status" name="Status" type="text" value="@Model.Status" readonly />
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="add__listing--input__box mb-20">
                                <label class="add__listing--input__label" for="Image">Car Image</label>
                                <div class="image-preview">
                                    @if (!string.IsNullOrEmpty(Model.Image))
                                    {
                                        <img src="@Model.Image" alt="Car Image" style="max-width: 70%; height: auto; border: 1px solid #ddd; border-radius: 8px;" />
                                    }
                                    else
                                    {
                                        <p>No image available</p>
                                    }
                                </div>
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="add__listing--input__box mb-20">
                                <label class="add__listing--input__label" for="CreatedAt">Created At</label>
                                <input class="add__listing--input__field" id="CreatedAt" name="CreatedAt" type="text" value="@Model.CreatedAt" readonly />
                            </div>
                        </div>
                    </div>

                    <div class="text-center">
                        <button class="solid__btn add__property--btn btn-danger" type="submit">Delete</button>
                        <a href="/Dashboard/Cars/Index" class="btn btn-secondary ml-3">Back to List</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</main>
