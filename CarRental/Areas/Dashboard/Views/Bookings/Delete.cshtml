@model CarRental.Models.Booking

@{
    ViewData["Title"] = "Delete";
}

<main class="main__content_wrapper">
    <div class="dashboard__container add__property--container">
        <div class="add__property--heading mb-30 text-center">
            <h2 class="add__property--heading__title text-danger">Delete Booking</h2>
        </div>
        <div class="add__property__inner d-flex justify-content-center">
            <div class="add__property--box mb-30 w-50">
                <h3 class="add__property--box__title mb-20 text-danger">Booking Details</h3>

                <!-- Confirmation Message -->
                <div class="alert alert-warning text-center mb-4">
                    <strong>Warning!</strong> Are you sure you want to delete this booking? This action cannot be undone.
                </div>

                <form class="add__property--form" action="/Dashboard/Bookings/Delete" method="post">
                    <div class="row">
                        <div class="col-12">
                            <div class="add__listing--input__box mb-20">
                                <label class="add__listing--input__label" for="BookingID">Booking ID</label>
                                <input class="add__listing--input__field" id="BookingID" name="BookingID" type="text" value="@Model.BookingID" readonly />
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="add__listing--input__box mb-20">
                                <label class="add__listing--input__label" for="FirstName">First Name</label>
                                <input class="add__listing--input__field" id="FirstName" name="FirstName" type="text" value="@Model.FirstName" readonly />
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="add__listing--input__box mb-20">
                                <label class="add__listing--input__label" for="SecondName">Second Name</label>
                                <input class="add__listing--input__field" id="SecondName" name="SecondName" type="text" value="@Model.SecondName" readonly />
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="add__listing--input__box mb-20">
                                <label class="add__listing--input__label" for="Email">Email</label>
                                <input class="add__listing--input__field" id="Email" name="Email" type="text" value="@Model.Email" readonly />
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="add__listing--input__box mb-20">
                                <label class="add__listing--input__label" for="PhoneNumber">Phone Number</label>
                                <input class="add__listing--input__field" id="PhoneNumber" name="PhoneNumber" type="text" value="@Model.PhoneNumber" readonly />
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="add__listing--input__box mb-20">
                                <label class="add__listing--input__label" for="CarID">Car</label>
                                <input class="add__listing--input__field" id="CarID" name="CarID" type="text" value="@Model.Car.CarID" readonly />
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="add__listing--input__box mb-20">
                                <label class="add__listing--input__label" for="StartDate">Start Date</label>
                                <input class="add__listing--input__field" id="StartDate" name="StartDate" type="text" value="@Model.StartDate" readonly />
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="add__listing--input__box mb-20">
                                <label class="add__listing--input__label" for="EndDate">End Date</label>
                                <input class="add__listing--input__field" id="EndDate" name="EndDate" type="text" value="@Model.EndDate" readonly />
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="add__listing--input__box mb-20">
                                <label class="add__listing--input__label" for="TotalPrice">Total Price</label>
                                <input class="add__listing--input__field" id="TotalPrice" name="TotalPrice" type="text" value="@Model.TotalPrice" readonly />
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="add__listing--input__box mb-20">
                                <label class="add__listing--input__label" for="Status">Status</label>
                                <input class="add__listing--input__field" id="Status" name="Status" type="text" value="@Model.Status" readonly />
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="add__listing--input__box mb-20">
                                <label class="add__listing--input__label" for="CreatedAt">Created At</label>
                                <input class="add__listing--input__field" id="CreatedAt" name="CreatedAt" type="text" value="@Model.CreatedAt" readonly />
                            </div>
                        </div>
                    </div>

                    <div class="text-center">
                        <button class="solid__btn add__property--btn btn-danger" type="submit">Delete</button>
                        <a href="/Dashboard/Bookings/Index" class="btn btn-secondary ml-3">Back to List</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</main>
