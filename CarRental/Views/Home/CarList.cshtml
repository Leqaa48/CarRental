@model IEnumerable<Car>
@{
    ViewData["Title"] = "CarList";
}

<!-- Hero Section -->
<div class="hero inner-page" style="background-image: url('/carrentals-master/images/hero_1_a.jpg');">
    <div class="container">
        <div class="row align-items-end">
            <div class="col-lg-5">
                <div class="intro">
                    <h1><strong>Available Cars</strong></h1>
                    <div class="custom-breadcrumbs">
                        <a asp-action="Index" asp-controller="Home">Home</a> <span class="mx-2">/</span> <strong>Available Cars</strong>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Car List Section -->
<div class="cc" style="margin-top: 30px;">
    <div class="container">
        <div class="row">
            @foreach (var car in Model)
            {
                <div class="col-md-6 col-lg-4 mb-4">
                    <div class="card car-card">
                        <div class="car-img-container">
                            <img src="@car.Image" alt="Car Image" class="car-image">
                        </div>
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">@car.Brand @car.Model (@car.Year)</h5>
                            <p class="rent-price">
                                <strong>@car.DailyRate.ToString("C")</strong> / day
                            </p>
                            <div class="features">
                                <span><strong>Fuel:</strong> @car.FuelType</span>
                                <span><strong>Transmission:</strong> @car.Transmission</span>
                                <span><strong>Seats:</strong> @car.Seats</span>
                            </div>
                            <div style="display: flex; align-items: center; gap: 10px;">
                                <p class="status" style="margin: 0;">
                                    @car.Status
                                </p>
                                <img src="@car.CompanyLogo" alt="Car Image" class="car-image" style="width: 60px; height: auto;">
                            </div>

                            <!-- Rent Now Button -->
                         @*    <a asp-controller="Booking" asp-action="RentCar" 
                               asp-route-carId="@car.CarID"
                               class="btn btn-primary">
                                Rent Now
                            </a> *@
                          

                            <a asp-controller="Booking"
                               asp-action="RentCar"
                               asp-route-carId="@car.CarID"
                               asp-route-startDate="@ViewBag.StartDate"
                               asp-route-endDate="@ViewBag.EndDate"
                               asp-route-BookingID="@ViewBag.BookingID"
                               asp-route-confirmationNo="@ViewBag.confirmationNo"
                               class="btn btn-primary">
                                Rent Now
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

<div class="site-section bg-primary py-5">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-7 mb-4 mb-md-0">
                <h2 class="mb-0 text-white">What are you waiting for?</h2>
                <p class="mb-0 opa-7">Lorem ipsum dolor sit amet, consectetur adipisicing elit. Obcaecati, laboriosam.</p>
            </div>
            <div class="col-lg-5 text-md-right">
                <a href="#" class="btn btn-primary btn-white">Rent a car now</a>
            </div>
        </div>
    </div>
</div>
