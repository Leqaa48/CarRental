@model IEnumerable<Car>
@{
    ViewData["Title"] = "CarList";
}

<div class="hero inner-page" style="background-image: url('/carrentals-master/images/hero_1_a.jpg');">
    <div class="container">
        <div class="row align-items-end">
            <div class="col-lg-5">
                <div class="intro">
                    <h1><strong>Available Cars</strong></h1>
                    <div class="custom-breadcrumbs">
                        <a href="index.html">Home</a> <span class="mx-2">/</span> <strong>Available Cars</strong>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="site-section bg-light">
    <div class="container">
        <div class="row">
            @foreach (var car in Model)
            {
                <div class="col-md-6 col-lg-4 mb-4">
                    <div class="card car-card">
                        <div class="car-img-container">
                            <img src="@car.Image" alt="Car Image" class="car-image">
                        </div>
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">@car.Brand @car.Model (@car.Year)</h5>
                            <p class="rent-price">
                                <strong>@car.DailyRate.ToString("C")</strong> / day
                            </p>
                            <div class="features">
                                <span><strong>Fuel:</strong> @car.FuelType</span>
                                <span><strong>Transmission:</strong> @car.Transmission</span>
                                <span><strong>Seats:</strong> @car.Seats</span>
                            </div>
                            <p class="status @(car.Status == "Available" ? "text-success" : "text-danger")">
                                Status: @car.Status
                            </p>

                            
                            <a href="@Url.Action("RentCar", new { carId = car.CarID, startDate = ViewBag.StartDate, endDate = ViewBag.EndDate })"
                               class="btn btn-primary btn-sm mt-auto @(car.Status == "Available" ? "" : "disabled")">
                                Rent Now
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>

        <!-- Pagination -->
        <div class="row">
            <div class="col-12">
                <div class="custom-pagination">
                    @if (ViewBag.CurrentPage > 1)
                    {
                        <a href="@Url.Action("CarList", new { page = ViewBag.CurrentPage - 1, startDate = ViewBag.StartDate, endDate = ViewBag.EndDate })">«</a>
                    }

                    @for (int i = 1; i <= ViewBag.TotalPages; i++)
                    {
                        if (i == ViewBag.CurrentPage)
                        {
                            <span class="active">@i</span>
                        }
                        else
                        {
                            <a href="@Url.Action("CarList", new { page = i, startDate = ViewBag.StartDate, endDate = ViewBag.EndDate })">@i</a>
                        }
                    }

                    @if (ViewBag.CurrentPage < ViewBag.TotalPages)
                    {
                        <a href="@Url.Action("CarList", new { page = ViewBag.CurrentPage + 1, startDate = ViewBag.StartDate, endDate = ViewBag.EndDate })">»</a>
                    }
                </div>
            </div>
        </div>
    </div>
</div>



<div class="site-section bg-primary py-5">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-7 mb-4 mb-md-0">
                <h2 class="mb-0 text-white">What are you waiting for?</h2>
                <p class="mb-0 opa-7">Lorem ipsum dolor sit amet, consectetur adipisicing elit. Obcaecati, laboriosam.</p>
            </div>
            <div class="col-lg-5 text-md-right">
                <a href="#" class="btn btn-primary btn-white">Rent a car now</a>
            </div>
        </div>
    </div>
</div>
