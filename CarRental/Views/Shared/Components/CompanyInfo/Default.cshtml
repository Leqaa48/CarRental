@model CompanyInfo

<div class="col-lg-4 ml-auto">
    <div class="bg-white p-3 p-md-5">
        <h3 class="text-black mb-4">@Model.CompanyName Info</h3>
        <ul class="list-unstyled footer-link">
            <li class="d-block mb-3"><span class="d-block text-black">Address:</span><span>@Model.Address</span></li>
            <li class="d-block mb-3"><span class="d-block text-black">Phone:</span><span>@Model.PhoneNumber</span></li>
            <li class="d-block mb-3"><span class="d-block text-black">Email:</span><span>@Model.Email</span></li>
        </ul>
    </div>
</div>