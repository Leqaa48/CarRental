@model IEnumerable<CarRental.Models.Booking>

<div class="container-fluid mt-4">
    <h2 class="mb-4">جميع الحجوزات</h2>

    <div class="table-responsive">
        <table class="table table-striped table-bordered align-middle text-nowrap">
            <thead class="table-dark">
                <tr>
                    <th>رقم الحجز</th>
                    <th>رقم السيارة</th>
                    <th>اسم العميل</th>
                    <th>تاريخ البداية</th>
                    <th>تاريخ النهاية</th>
                    <th>إجمالي السعر</th>
                    <th>الإجراءات</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var booking in Model)
                {
                    <tr>
                        <td>@booking.BookingID</td>
                        <td>@booking.CarID</td>
                        <td>@($"{booking.FirstName} {booking.LastName}")</td>
                        <td>@booking.StartDate.ToString("yyyy-MM-dd HH:mm")</td>
                        <td>@booking.EndDate.ToString("yyyy-MM-dd HH:mm")</td>
                        <td>@booking.TotalPrice.ToString("C")</td>
                        <td>
                            <div class="d-flex gap-2 flex-wrap">
                                <!-- رابط تعديل الحجز -->
                                <a href="@Url.Action("Index", "Home")" class="btn btn-primary">تعديل</a>

                                <!-- رابط إلغاء الحجز -->
                                <a href="@Url.Action("CancelBooking", "Booking", new { BookingID = booking.BookingID })" class="btn btn-danger btn-lg px-5">إلغاء</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
